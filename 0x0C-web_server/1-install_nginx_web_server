#!/usr/bin/env bash
# installs nginx 
# sets nginx to be listening on port 80
# prints 'Hello World'

sudo apt-get update 
sudo apt-get -y install nginx
sudo ufw 'Nginx HTTP'
echo "Hello World!" | sudo tee /var/www/html/index.html

# testing nginx configuration

sudo nginx -t

sudo service nginx restart
sudo service nginx reload
